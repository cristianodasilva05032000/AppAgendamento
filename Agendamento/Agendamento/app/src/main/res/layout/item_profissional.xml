<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/btnCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:gravity="start"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dim_5"
                    android:layout_weight="4">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_status"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/foto" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:text="Nome do Profissional"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgCab"
                                android:layout_width="@dimen/dim_15"
                                android:layout_height="@dimen/dim_15"
                                android:scaleType="fitXY"
                                android:src="@drawable/star_class" />

                            <TextView
                                android:id="@+id/txtStar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dim_5"
                                android:text="4,3333333333333"
                                android:textColor="#DFA135"
                                android:maxLength="3"
                                android:textSize="@dimen/dim_12" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dim_5"
                                android:text="-"
                                android:textColor="#DFA135"
                                android:textSize="@dimen/dim_12" />

                            <TextView
                                android:id="@+id/txtDist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dim_5"
                                android:text="4.0 km"
                                android:textColor="@color/text_card"
                                android:textSize="@dimen/dim_12" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPreco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_5"
                        android:text="PreÃ§o: R$ 0,00"
                        android:textColor="@color/text_card"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="4.2"
                    android:gravity="end">

                    <LinearLayout
                        android:id="@+id/btnCancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dim_16"
                        android:orientation="vertical">

<!--                        <ImageView-->
<!--                            android:id="@+id/coracao"-->
<!--                            android:layout_width="@dimen/dim_24"-->
<!--                            android:layout_height="@dimen/dim_24"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:background="@drawable/heart_deselect" />-->

                        <ImageView
                            android:layout_width="@dimen/dim_24"
                            android:layout_height="@dimen/dim_24"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_cancel" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
